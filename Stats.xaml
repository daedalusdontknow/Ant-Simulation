<Window x:Class="Antsimulation.Stats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Antsimulation"
        mc:Ignorable="d"
        Title="Stats" Height="450" Width="345">
    <Grid>
        <Label HorizontalAlignment="Left" Margin="35,39,0,0" VerticalAlignment="Top">
            <Label x:Name="AntCount" Content="Ants:" Width="195"/>
        </Label>
        <Label x:Name="NutritionCount" Content="Nutrition" HorizontalAlignment="Left" Margin="35,80,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="HealthCount" Content="Health:" HorizontalAlignment="Left" Margin="35,111,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="GenerationCount" Content="Generation:" HorizontalAlignment="Left" Margin="35,142,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="SpeedCount" Content="a. Speed:" HorizontalAlignment="Left" Margin="35,173,0,0" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="StrengthCount" Content="a. Strength:" HorizontalAlignment="Left" Margin="35,0,0,0" VerticalAlignment="Center" Width="205"/>

    </Grid>
</Window>
